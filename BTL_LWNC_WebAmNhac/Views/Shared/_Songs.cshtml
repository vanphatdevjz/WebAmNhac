@{
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/bootstrap-4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/song.css">
    <link rel="stylesheet" href="/css/showPlaylist.css">
</head>

<body>

    <div class="header">
        @await Component.InvokeAsync("Logo")
        @await Component.InvokeAsync("SearchBar")
        @await Component.InvokeAsync("Account")
    </div>
    <hr id="hr-header">

    <div class="body">
        @await Component.InvokeAsync("Sidebar")
        <div class="main">

            <!-- Danh sach lựa chọn -->
            @await Component.InvokeAsync("Option")

            <!-- Danh sách bài hát -->
            @RenderBody()

            <!-- Kết thúc danh sách -->
        </div>
    </div>

    <div class="footer">
    </div>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="~/js/song.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

